<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>
  <link href="/public/styles.css" rel="stylesheet">
</head>

<body class="bg-white text-gray-900">

<nav class="w-full border-b border-gray-200 bg-white">
  <div class="max-w-7xl mx-auto px-6 py-5 flex items-center justify-between">

    <!-- Brand -->
    <a href="/" class="text-3xl font-semibold tracking-tight text-pink-600">
      NookyUp
    </a>

    <!-- Desktop Nav -->
    <div class="hidden md:flex items-center gap-12 text-lg font-medium">
      <a href="/" class="hover:text-pink-600 transition">Home</a>
      <a href="/login" class="hover:text-pink-600 transition">Login</a>
      <a href="/signup" class="hover:text-pink-600 transition">Sign Up</a>
    </div>

    <!-- Mobile Menu Button -->
    <button id="mobileMenuBtn" class="md:hidden text-3xl text-gray-700">
      â˜°
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobileMenu" class="hidden md:hidden px-6 pb-6 flex flex-col gap-4 text-lg font-medium">
    <a href="/" class="hover:text-pink-600 transition">Home</a>
    <a href="/login" class="hover:text-pink-600 transition">Login</a>
    <a href="/signup" class="hover:text-pink-600 transition">Sign Up</a>
  </div>
</nav>

<script>
  const btn = document.getElementById("mobileMenuBtn");
  const menu = document.getElementById("mobileMenu");

  btn.addEventListener("click", () => {
    menu.classList.toggle("hidden");
  });
</script>

