<div class="max-w-6xl mx-auto py-16 px-6">

  <h1 class="text-4xl font-semibold mb-10 tracking-tight">
    Flagged ads
  </h1>

  <p class="text-lg text-gray-600 mb-8">
    Ads reported by users for review.
  </p>

  <% if (!ads || ads.length === 0) { %>
    <p class="text-gray-600 text-lg">No flagged ads.</p>
  <% } else { %>
    <div class="flex flex-col gap-6">
      <% ads.forEach(ad => { %>
        <div class="p-5 rounded-2xl border border-red-200 bg-red-50/40">
          <div class="flex justify-between items-start gap-4 mb-3">
            <div>
              <h2 class="text-2xl font-semibold mb-1">
                <a href="/admin/ad/<%= ad.id %>" class="hover:underline">
                  <%= ad.title %>
                </a>
              </h2>
              <p class="text-sm text-gray-500">
                <%= ad.city_name %> · <%= ad.category_name %>
                <% if (ad.subcategory_name) { %> / <%= ad.subcategory_name %><% } %>
                · by <%= ad.username %>
              </p>
              <% if (ad.flag_reason) { %>
                <p class="text-xs text-red-700 mt-1">
                  Flag reason: <%= ad.flag_reason %>
                </p>
              <% } %>
            </div>
            <p class="text-xs text-gray-500">
              <%= ad.created_at %>
            </p>
          </div>

          <p class="text-gray-800 line-clamp-3 mb-4"><%= ad.body %></p>

          <div class="flex gap-4">
            <form method="POST" action="/admin/ad/<%= ad.id %>/clear-flags">
              <button
                type="submit"
                class="px-4 py-2 rounded-lg bg-green-600 text-white text-sm hover:bg-green-700 transition"
              >
                Clear flags
              </button>
            </form>

            <form method="POST" action="/admin/ad/<%= ad.id %>/remove">
              <button
                type="submit"
                class="px-4 py-2 rounded-lg bg-red-600 text-white text-sm hover:bg-red-700 transition"
              >
                Remove ad
              </button>
            </form>

            <a
              href="/admin/ad/<%= ad.id %>"
              class="px-4 py-2 rounded-lg bg-white text-gray-800 text-sm border border-gray-200 hover:bg-gray-50 transition"
            >
              View details
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

</div>

