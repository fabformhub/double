<%- include("../layouts/main", {
  body: `
  <h1 class="text-2xl font-bold mb-4">Inbox</h1>

  <div class="space-y-4">
    ${threads.length === 0 ? `
      <p class="text-slate-400">No messages yet.</p>
    ` : ""}

    ${threads.map(t => `
      <a href="/messages/${t.sender_id}"
        class="block bg-slate-900 p-4 rounded border border-slate-800 hover:border-indigo-500">
        <div class="flex justify-between">
          <span class="font-semibold">${t.sender_name}</span>
          <span class="text-slate-500 text-sm">${new Date(t.created_at).toLocaleString()}</span>
        </div>
        <p class="text-slate-400 mt-1">${t.body.substring(0, 80)}...</p>
      </a>
    `).join("")}
  </div>
  `
}) %>

