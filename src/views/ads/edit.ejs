<%- include("../partials/header", { title }) %>

<h1>Edit Ad in <%= location.city_name %></h1>

<form action="/<%= location.country_code %>/<%= location.slug %>/ads/<%= ad.id %>/edit" method="POST">
  <label>Title</label>
  <input type="text" name="title" value="<%= ad.title %>" required>

  <label>Body</label>
  <textarea name="body" required><%= ad.body %></textarea>

  <label>Category</label>
  <input type="text" name="category" value="<%= ad.category %>">

  <button type="submit" class="btn btn-primary">Update Ad</button>
</form>

<%- include("../partials/footer") %>

