<%- include("../partials/header", { title }) %>

<h1 class="page-title">Ads in <%= location.city_name %></h1>

<div class="ads-list">
  <% if (ads.length === 0) { %>
    <p>No ads posted in this location yet.</p>
  <% } else { %>
    <% ads.forEach(ad => { %>
      <div class="ad-card">
        <h2>
          <a href="/<%= location.country_code %>/<%= location.slug %>/ads/<%= ad.id %>">
            <%= ad.title %>
          </a>
        </h2>
        <p><%= ad.body.substring(0, 120) %>...</p>
        <small>Posted by <%= ad.username %></small>
      </div>
    <% }) %>
  <% } %>
</div>

<a class="btn btn-primary"
   href="/<%= location.country_code %>/<%= location.slug %>/ads/new">
  Post New Ad
</a>

<%- include("../partials/footer") %>

