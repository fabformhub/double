<h1 class="text-3xl font-bold mb-6">Create Your Account</h1>

<% if (error) { %>
  <div class="mb-4 p-3 bg-red-900 text-red-200 rounded">
    <%= error %>
  </div>
<% } %>

<form action="/signup" method="POST" class="grid gap-4 max-w-md">
<input type="hidden" name="_csrf" value="<%= csrfToken %>">

  <div>
    <label class="block mb-1 text-slate-300">Email</label>
    <input 
      type="email" 
      name="email" 
      required
      class="w-full p-2 rounded bg-slate-900 border border-slate-700 text-slate-100"
    >
  </div>

  <div>
    <label class="block mb-1 text-slate-300">Username</label>
    <input 
      type="text" 
      name="username" 
      required
      class="w-full p-2 rounded bg-slate-900 border border-slate-700 text-slate-100"
    >
  </div>

  <div>
    <label class="block mb-1 text-slate-300">Password</label>
    <input 
      type="password" 
      name="password" 
      required
      class="w-full p-2 rounded bg-slate-900 border border-slate-700 text-slate-100"
    >
  </div>

  <button 
    class="bg-indigo-600 hover:bg-indigo-500 px-4 py-2 rounded text-white font-medium"
  >
    Sign Up
  </button>

</form>

