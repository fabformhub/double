<%- include("../layouts/main", {
  body: `
  <div class="max-w-md mx-auto bg-slate-900 p-6 rounded-xl border border-slate-800">
    <h1 class="text-xl font-semibold mb-4">Create your account</h1>

    ${error ? `
      <div class="bg-red-900/40 border border-red-700 text-red-300 p-3 rounded mb-4">
        ${error}
      </div>
    ` : ""}

    <form method="POST">
      <input type="hidden" name="_csrf" value="${csrfToken}">

      <div class="mb-3">
        <label class="block mb-1 text-sm text-slate-300">Username</label>
        <input name="username" type="text" placeholder="Choose a username"
          class="w-full px-4 py-2 rounded bg-slate-800 border border-slate-700 focus:ring-2 focus:ring-indigo-500">
      </div>

      <div class="mb-3">
        <label class="block mb-1 text-sm text-slate-300">Email</label>
        <input name="email" type="email" placeholder="you@example.com"
          class="w-full px-4 py-2 rounded bg-slate-800 border border-slate-700 focus:ring-2 focus:ring-indigo-500">
      </div>

      <div class="mb-4">
        <label class="block mb-1 text-sm text-slate-300">Password</label>
        <input name="password" type="password" placeholder="Create a password"
          class="w-full px-4 py-2 rounded bg-slate-800 border border-slate-700 focus:ring-2 focus:ring-indigo-500">
      </div>

      <button class="w-full bg-indigo-600 hover:bg-indigo-500 py-2 rounded font-medium">
        Create account
      </button>
    </form>

    <p class="text-center text-sm text-slate-400 mt-4">
      Already have an account?
      <a href="/login" class="text-indigo-400 hover:text-indigo-300">Log in</a>
    </p>
  </div>
  `
}) %>
