<div class="max-w-md mx-auto bg-slate-900 p-6 rounded-xl border border-slate-800">
  <h1 class="text-xl font-semibold mb-4">Log in</h1>

  <% if (error) { %>
    <div class="bg-red-900/40 border border-red-700 text-red-300 p-3 rounded mb-4">
      <%= error %>
    </div>
  <% } %>

  <form action="/login" method="POST" class="space-y-4">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <div>
      <label class="block mb-1 text-slate-300">Email</label>
      <input type="email" name="email" required
        class="w-full p-2 rounded bg-slate-800 border border-slate-700 text-slate-100">
    </div>

    <div>
      <label class="block mb-1 text-slate-300">Password</label>
      <input type="password" name="password" required
        class="w-full p-2 rounded bg-slate-800 border border-slate-700 text-slate-100">
    </div>

    <button class="w-full bg-indigo-600 hover:bg-indigo-500 p-2 rounded font-medium">
      Log in
    </button>
  </form>

  <div class="text-center mt-4 text-slate-400">
    Donâ€™t have an account?
    <a href="/signup" class="text-indigo-400 hover:text-indigo-300 font-medium">
      Create one here
    </a>
  </div>
</div>

