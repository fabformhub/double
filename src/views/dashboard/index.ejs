<div class="max-w-5xl mx-auto py-16 px-6">

  <h1 class="text-4xl font-semibold mb-10 tracking-tight">
    Your NookyUp dashboard
  </h1>

  <p class="text-lg text-gray-600 mb-10">
    Manage your ads, drafts, and activity.
  </p>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
    <div class="p-5 rounded-2xl bg-gray-50">
      <p class="text-sm text-gray-500 mb-1">Live ads</p>
      <p class="text-3xl font-semibold"><%= stats.live || 0 %></p>
    </div>
    <div class="p-5 rounded-2xl bg-gray-50">
      <p class="text-sm text-gray-500 mb-1">Drafts</p>
      <p class="text-3xl font-semibold"><%= stats.drafts || 0 %></p>
    </div>
    <div class="p-5 rounded-2xl bg-gray-50">
      <p class="text-sm text-gray-500 mb-1">Pending review</p>
      <p class="text-3xl font-semibold"><%= stats.pending || 0 %></p>
    </div>
  </div>

  <div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-medium">Your ads</h2>
    <a href="/start" class="text-pink-600 hover:underline text-lg">
      + Post a new ad
    </a>
  </div>

  <% if (!ads || ads.length === 0) { %>
    <p class="text-gray-600 text-lg">You haven’t posted any ads yet.</p>
  <% } else { %>
    <div class="flex flex-col gap-6">
      <% ads.forEach(ad => { %>
        <div class="p-4 rounded-xl border border-gray-200 flex flex-col gap-2">
          <div class="flex justify-between items-center">
            <h3 class="text-xl font-semibold"><%= ad.title %></h3>
            <span class="text-xs uppercase tracking-wide px-2 py-1 rounded-full
              <%= ad.status === 'approved' ? 'bg-green-100 text-green-700' : '' %>
              <%= ad.status === 'draft' ? 'bg-gray-100 text-gray-700' : '' %>
              <%= ad.status === 'pending' ? 'bg-yellow-100 text-yellow-700' : '' %>">
              <%= ad.status %>
            </span>
          </div>
          <p class="text-sm text-gray-500">
            <%= ad.city_name %> · <%= ad.category_name %>
            <% if (ad.subcategory_name) { %> / <%= ad.subcategory_name %><% } %>
          </p>
          <p class="text-gray-700 line-clamp-2"><%= ad.body %></p>
          <div class="flex gap-4 mt-3 text-sm">
            <a href="<%= ad.publicUrl %>" class="text-pink-600 hover:underline">View</a>
            <a href="<%= ad.editUrl %>" class="text-gray-700 hover:underline">Edit</a>
            <% if (ad.status === 'draft') { %>
              <form method="POST" action="<%= ad.submitUrl %>" class="inline">
                <button class="text-gray-700 hover:underline" type="submit">
                  Submit for review
                </button>
              </form>
            <% } %>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

</div>

