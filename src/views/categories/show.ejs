<div class="max-w-4xl mx-auto py-16 px-6">

  <h1 class="text-4xl font-semibold mb-10 tracking-tight">
    <%= category.name %> in <span class="text-pink-600"><%= location.city_name %></span>
  </h1>

  <% if (subcategories.length === 0) { %>

    <a 
      href="/<%= location.country_code %>/<%= location.slug %>/<%= category.slug %>/ads"
      class="text-xl text-pink-600 hover:underline"
    >
      View all ads â†’
    </a>

  <% } else { %>

    <p class="text-lg text-gray-600 mb-12">
      Choose a subcategory.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <% subcategories.forEach(sub => { %>
        <a
          href="/<%= location.country_code %>/<%= location.slug %>/<%= category.slug %>/<%= sub.slug %>/ads"
          class="flex items-center gap-3 text-xl text-gray-800 hover:text-pink-600 transition"
        >
          <span>ğŸ“</span>
          <span><%= sub.name %></span>
        </a>
      <% }) %>
    </div>

  <% } %>

</div>

